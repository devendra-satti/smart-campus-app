<%- include('../layout', { title: title, username: username }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Cafeteria Queue Status</h2>
    <a href="/cafeteria/report" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Report Status
    </a>
</div>

<!-- Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Cafeteria</label>
                <select name="cafeteria" class="form-select">
                    <option value="all" <%= currentFilter.cafeteria === 'all' ? 'selected' : '' %>>All Cafeterias</option>
                    <option value="main" <%= currentFilter.cafeteria === 'main' ? 'selected' : '' %>>Main Cafeteria</option>
                    <option value="north" <%= currentFilter.cafeteria === 'north' ? 'selected' : '' %>>North Cafeteria</option>
                    <option value="south" <%= currentFilter.cafeteria === 'south' ? 'selected' : '' %>>South Cafeteria</option>
                    <option value="east" <%= currentFilter.cafeteria === 'east' ? 'selected' : '' %>>East Cafeteria</option>
                    <option value="west" <%= currentFilter.cafeteria === 'west' ? 'selected' : '' %>>West Cafeteria</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter me-1"></i>Apply Filter
                    </button>
                    <a href="/cafeteria" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-sync me-1"></i>Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Current Status -->
<div class="row mb-4">
    <% if (latestStatus && latestStatus.length > 0) { %>
        <% latestStatus.forEach(status => { %>
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><%= status.cafeteria.toUpperCase() %> Cafeteria</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <div class="display-4 mb-2">
                                <i class="fas fa-<%= 
                                    status.status === 'high' ? 'exclamation-triangle text-danger' : 
                                    status.status === 'medium' ? 'clock text-warning' : 'check-circle text-success' 
                                %>"></i>
                            </div>
                            <h3 class="mb-2">
                                <span class="badge bg-<%= 
                                    status.status === 'high' ? 'danger' : 
                                    status.status === 'medium' ? 'warning' : 'success' 
                                %> fs-4">
                                    <%= status.status.toUpperCase() %>
                                </span>
                            </h3>
                            <% if (status.estimatedWaitTime) { %>
                                <p class="mb-2">Estimated wait: <strong><%= status.estimatedWaitTime %> minutes</strong></p>
                            <% } %>
                        </div>
                        
                        <% if (status.description) { %>
                            <div class="alert alert-info mb-3">
                                <i class="fas fa-info-circle me-1"></i>
                                <%= status.description %>
                            </div>
                        <% } %>
                        
                        <div class="text-muted small">
                            <i class="fas fa-user me-1"></i>
                            Reported by: <%= status.reportedBy.username %><br>
                            <i class="fas fa-clock me-1"></i>
                            Updated: <%= new Date(status.createdAt).toLocaleTimeString() %>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                <h4>No queue data available</h4>
                <p class="text-muted">Be the first to report the current queue status!</p>
                <a href="/cafeteria/report" class="btn btn-primary mt-2">
                    <i class="fas fa-plus me-1"></i>Report Status
                </a>
            </div>
        </div>
    <% } %>
</div>

<!-- Status History Chart (simplified) -->
<% if (statusHistory && statusHistory.length > 0) { %>
<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Queue History (Last 24 Hours)</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Cafeteria</th>
                        <th>Status</th>
                        <th>Wait Time</th>
                        <th>Reported By</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% statusHistory.forEach(entry => { %>
                        <tr>
                            <td><%= entry.cafeteria %></td>
                            <td>
                                <span class="badge bg-<%= 
                                    entry.status === 'high' ? 'danger' : 
                                    entry.status === 'medium' ? 'warning' : 'success' 
                                %>">
                                    <%= entry.status %>
                                </span>
                            </td>
                            <td>
                                <% if (entry.estimatedWaitTime) { %>
                                    <%= entry.estimatedWaitTime %> min
                                <% } else { %>
                                    <span class="text-muted">-</span>
                                <% } %>
                            </td>
                            <td><%= entry.reportedBy.username %></td>
                            <td><%= new Date(entry.createdAt).toLocaleTimeString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<% } %>

<!-- Auto-refresh notification -->
<div class="alert alert-info">
    <i class="fas fa-sync-alt me-1"></i>
    Queue status updates automatically every 30 seconds
</div>
