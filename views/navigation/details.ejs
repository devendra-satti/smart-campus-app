<%- include('../layout', { title: title, username: username }) %>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <span class="badge bg-<%= 
                            location.category === 'academic' ? 'primary' : 
                            location.category === 'food' ? 'success' : 
                            location.category === 'administration' ? 'info' : 
                            location.category === 'recreation' ? 'warning' : 
                            location.category === 'student' ? 'secondary' : 
                            location.category === 'health' ? 'danger' : 'dark' 
                        %> fs-6">
                            <%= location.category.toUpperCase() %>
                        </span>
                        <h2 class="card-title mt-2">
                            <i class="fas fa-<%= 
                                location.category === 'academic' ? 'book' : 
                                location.category === 'food' ? 'utensils' : 
                                location.category === 'administration' ? 'building' : 
                                location.category === 'recreation' ? 'dumbbell' : 
                                location.category === 'student' ? 'users' : 
                                location.category === 'health' ? 'heartbeat' : 'map-marker-alt' 
                            %> me-2"></i>
                            <%= location.name %>
                        </h2>
                    </div>
                    <small class="text-muted">Location ID: <%= location.id %></small>
                </div>

                <div class="mb-4">
                    <h5>Description</h5>
                    <p class="card-text"><%= location.description %></p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-layer-group me-3 text-primary fa-lg"></i>
                            <div>
                                <strong>Floor</strong><br>
                                <span class="text-muted"><%= location.floor %></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-clock me-3 text-success fa-lg"></i>
                            <div>
                                <strong>Operating Hours</strong><br>
                                <span class="text-muted"><%= location.hours %></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <h5>Contact Information</h5>
                    <p class="card-text">
                        <i class="fas fa-envelope me-2 text-info"></i>
                        <%= location.contact %>
                    </p>
                </div>

                <div class="mb-4">
                    <h5>Amenities & Facilities</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <% location.amenities.forEach(amenity => { %>
                            <span class="badge bg-light text-dark border">
                                <i class="fas fa-check me-1"></i><%= amenity %>
                            </span>
                        <% }); %>
                    </div>
                </div>

                <div class="mb-4">
                    <h5>Coordinates</h5>
                    <p class="card-text">
                        <i class="fas fa-map-marker-alt me-2 text-danger"></i>
                        X: <%= location.coordinates.x %>, Y: <%= location.coordinates.y %>
                    </p>
                </div>

                <div class="d-flex gap-2">
                    <a href="/navigation" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Locations
                    </a>
                    <a href="/navigation/map" class="btn btn-primary">
                        <i class="fas fa-map me-1"></i>View on Map
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Nearby Locations -->
        <% if (nearbyLocations && nearbyLocations.length > 0) { %>
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-location-arrow me-1"></i>
                    Nearby Locations
                </h6>
            </div>
            <div class="card-body">
                <% nearbyLocations.forEach(nearby => { %>
                    <div class="mb-3 pb-2 border-bottom">
                        <h6 class="mb-1">
                            <i class="fas fa-<%= 
                                nearby.category === 'academic' ? 'book' : 
                                nearby.category === 'food' ? 'utensils' : 
                                nearby.category === 'administration' ? 'building' : 
                                nearby.category === 'recreation' ? 'dumbbell' : 
                                nearby.category === 'student' ? 'users' : 
                                nearby.category === 'health' ? 'heartbeat' : 'map-marker-alt' 
                            %> me-1 text-<%= 
                                nearby.category === 'academic' ? 'primary' : 
                                nearby.category === 'food' ? 'success' : 
                                nearby.category === 'administration' ? 'info' : 
                                nearby.category === 'recreation' ? 'warning' : 
                                nearby.category === 'student' ? 'secondary' : 
                                nearby.category === 'health' ? 'danger' : 'dark' 
                            %>"></i>
                            <%= nearby.name %>
                        </h6>
                        <p class="mb-1 text-muted small"><%= nearby.description.substring(0, 60) %>...</p>
                        <a href="/navigation/<%= nearby.id %>" class="btn btn-sm btn-outline-primary mt-1">
                            <i class="fas fa-info-circle me-1"></i>Details
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-bolt me-1"></i>
                    Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <% if (location.category === 'food') { %>
                        <a href="/cafeteria" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-utensils me-1"></i>Check Queue Status
                        </a>
                    <% } %>
                    
                    <% if (location.category === 'academic') { %>
                        <a href="/timetable" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-clock me-1"></i>View Timetable
                        </a>
                    <% } %>
                    
                    <a href="/navigation/map" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-map me-1"></i>Campus Map
                    </a>
                    
                    <button class="btn btn-outline-secondary btn-sm" data-copy="<%= location.contact %>">
                        <i class="fas fa-copy me-1"></i>Copy Contact
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
