<%- include('../layout', { title: title, username: username }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Campus Navigation</h2>
    <a href="/navigation/map" class="btn btn-primary">
        <i class="fas fa-map me-1"></i>View Map
    </a>
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Category</label>
                <select name="category" class="form-select">
                    <option value="all" <%= currentFilters.category === 'all' ? 'selected' : '' %>>All Categories</option>
                    <option value="academic" <%= currentFilters.category === 'academic' ? 'selected' : '' %>>Academic</option>
                    <option value="food" <%= currentFilters.category === 'food' ? 'selected' : '' %>>Food & Dining</option>
                    <option value="administration" <%= currentFilters.category === 'administration' ? 'selected' : '' %>>Administration</option>
                    <option value="recreation" <%= currentFilters.category === 'recreation' ? 'selected' : '' %>>Recreation</option>
                    <option value="student" <%= currentFilters.category === 'student' ? 'selected' : '' %>>Student Services</option>
                    <option value="health" <%= currentFilters.category === 'health' ? 'selected' : '' %>>Health</option>
                    <option value="transportation" <%= currentFilters.category === 'transportation' ? 'selected' : '' %>>Transportation</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Search</label>
                <div class="input-group">
                    <input type="search" name="search" class="form-control" 
                           placeholder="Search locations..." value="<%= currentFilters.search || '' %>">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Locations Grid -->
<% if (locations && locations.length > 0) { %>
    <div class="row">
        <% locations.forEach(location => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="badge bg-<%= 
                                location.category === 'academic' ? 'primary' : 
                                location.category === 'food' ? 'success' : 
                                location.category === 'administration' ? 'info' : 
                                location.category === 'recreation' ? 'warning' : 
                                location.category === 'student' ? 'secondary' : 
                                location.category === 'health' ? 'danger' : 'dark' 
                            %>">
                                <%= location.category %>
                            </span>
                            <small class="text-muted">ID: <%= location.id %></small>
                        </div>
                        
                        <h5 class="card-title">
                            <i class="fas fa-<%= 
                                location.category === 'academic' ? 'book' : 
                                location.category === 'food' ? 'utensils' : 
                                location.category === 'administration' ? 'building' : 
                                location.category === 'recreation' ? 'dumbbell' : 
                                location.category === 'student' ? 'users' : 
                                location.category === 'health' ? 'heartbeat' : 'map-marker-alt' 
                            %> me-2"></i>
                            <%= location.name %>
                        </h5>
                        
                        <p class="card-text text-muted"><%= location.description %></p>
                        
                        <div class="mb-2">
                            <strong>Floor:</strong>
                            <span class="text-muted"><%= location.floor %></span>
                        </div>
                        
                        <div class="mb-2">
                            <strong>Hours:</strong>
                            <span class="text-muted"><%= location.hours %></span>
                        </div>
                        
                        <div class="mb-3">
                            <strong>Amenities:</strong>
                            <div class="d-flex flex-wrap gap-1 mt-1">
                                <% location.amenities.forEach(amenity => { %>
                                    <span class="badge bg-light text-dark">
                                        <i class="fas fa-check me-1"></i><%= amenity %>
                                    </span>
                                <% }); %>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <strong>Contact:</strong>
                            <span class="text-muted"><%= location.contact %></span>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/navigation/<%= location.id %>" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </a>
                            <small class="text-muted">
                                Coordinates: (<%= location.coordinates.x %>, <%= location.coordinates.y %>)
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="text-center py-5">
        <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
        <h4>No locations found</h4>
        <p class="text-muted">Try adjusting your search criteria.</p>
    </div>
<% } %>

<!-- Categories Summary -->
<div class="card mt-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Campus Categories</h5>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-6 col-md-3 mb-3">
                <div class="p-3 border rounded">
                    <i class="fas fa-book fa-2x text-primary mb-2"></i>
                    <h6>Academic</h6>
                    <small class="text-muted">Libraries, Departments, Classrooms</small>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="p-3 border rounded">
                    <i class="fas fa-utensils fa-2x text-success mb-2"></i>
                    <h6>Food & Dining</h6>
                    <small class="text-muted">Cafeterias, Food Courts</small>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="p-3 border rounded">
                    <i class="fas fa-building fa-2x text-info mb-2"></i>
                    <h6>Administration</h6>
                    <small class="text-muted">Offices, Services</small>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="p-3 border rounded">
                    <i class="fas fa-dumbbell fa-2x text-warning mb-2"></i>
                    <h6>Recreation</h6>
                    <small class="text-muted">Sports, Gym, Pool</small>
                </div>
            </div>
        </div>
    </div>
</div>
